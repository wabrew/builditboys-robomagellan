<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="match_parent"
		android:orientation="vertical" android:id="@+id/linearLayout1"
		android:layout_height="match_parent">
		<ToggleButton android:id="@+id/button" android:text="ToggleButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center"></ToggleButton>
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/label1" android:layout_width="wrap_content"
			android:text="@string/hardware" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/hardware_field"
			android:text="" android:cursorVisible="false" android:focusable="false"></EditText>
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/label2" android:layout_width="wrap_content"
			android:text="@string/bootloader" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/bootloader_field"
			android:text="" android:cursorVisible="false" android:focusable="false"></EditText>
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/label3" android:layout_width="wrap_content"
			android:text="@string/firmware" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/firmware_field"
			android:text="" android:cursorVisible="false" android:focusable="false"></EditText>
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/label4" android:layout_width="wrap_content"
			android:text="@string/library" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/library_field"
			android:text="" android:cursorVisible="false" android:focusable="false"></EditText>
	</LinearLayout>
</ScrollView>
